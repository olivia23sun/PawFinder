import { createContext, useContext, useState, useEffect } from 'react';
import { 
    createUserWithEmailAndPassword,
    signInWithEmailAndPassword,
    signOut,
    onAuthStateChanged,
    updateProfile
} from 'firebase/auth';
import { doc, setDoc, getDoc } from 'firebase/firestore';
import { auth, db } from '../firebase';
import translateFirebaseError from '../utils/errorHelpers';

// ========== å»ºç«‹ Context ==========
// ç”¨æ–¼åœ¨æ•´å€‹æ‡‰ç”¨ç¨‹å¼ä¸­å…±äº«ä½¿ç”¨è€…ç‹€æ…‹
const AuthContext = createContext();

// ========== è‡ªè¨‚ Hookï¼šæ–¹ä¾¿å…¶ä»–å…ƒä»¶ä½¿ç”¨ ==========
export const useAuth = () => {
    const context = useContext(AuthContext);
    if (!context) {
        throw new Error('useAuth å¿…é ˆåœ¨ AuthProvider å…§ä½¿ç”¨');
    }
    return context;
};

// ========== Auth Providerï¼šç‹€æ…‹ç®¡ç†ä¸­å¿ƒ ==========
export const AuthProvider = ({ children }) => {
    const [currentUser, setCurrentUser] = useState(null);        // Firebase Auth ä½¿ç”¨è€…
    const [userProfile, setUserProfile] = useState(null);        // Firestore ä½¿ç”¨è€…è³‡æ–™
    const [loading, setLoading] = useState(true);                // åˆå§‹è¼‰å…¥ç‹€æ…‹

    // ========== è¨»å†ŠåŠŸèƒ½ ==========
    const signup = async (email, password, displayName, phone) => {
        try {
            // 1. å»ºç«‹ Firebase Auth å¸³è™Ÿ
            const userCredential = await createUserWithEmailAndPassword(auth, email, password);
            const user = userCredential.user;

            // 2. æ›´æ–° Auth çš„é¡¯ç¤ºåç¨±
            await updateProfile(user, { displayName });

            // 3. åœ¨ Firestore å»ºç«‹ä½¿ç”¨è€…æ–‡ä»¶ï¼ˆå„²å­˜å®Œæ•´è³‡æ–™ï¼‰
            await setDoc(doc(db, 'users', user.uid), {
                uid: user.uid,
                email: email,
                displayName: displayName,
                phone: phone,
                createdAt: new Date(),
                role: 'user'
            });

            return user;
        } catch (error) {
            console.error('è¨»å†Šå¤±æ•—:', error);
            throw new Error(translateFirebaseError(error.code));
        }
    };

    // ========== ç™»å…¥åŠŸèƒ½ ==========
    const login = async (email, password) => {
        // Firebase æœƒè‡ªå‹•è§¸ç™¼ onAuthStateChanged
        try {
            return await signInWithEmailAndPassword(auth, email, password);
        } catch (error) {
            throw new Error(translateFirebaseError(error.code));
        }
    };

    // ========== ç™»å‡ºåŠŸèƒ½ ==========
    const logout = async () => {
        return await signOut(auth);
    };

    // ========== å¾ Firestore å–å¾—ä½¿ç”¨è€…è©³ç´°è³‡æ–™ ==========
    const fetchUserProfile = async (uid) => {
        try {
            const docRef = doc(db, 'users', uid);
            const docSnap = await getDoc(docRef);
            
            if (docSnap.exists()) {
                setUserProfile(docSnap.data());
            }
        } catch (error) {
            console.error('å–å¾—ä½¿ç”¨è€…è³‡æ–™å¤±æ•—:', error);
        }
    };

    // ========== ç›£è½ç™»å…¥ç‹€æ…‹è®ŠåŒ– ==========
    // ç•¶ä½¿ç”¨è€…ç™»å…¥/ç™»å‡ºæ™‚è‡ªå‹•è§¸ç™¼
    useEffect(() => {
        const unsubscribe = onAuthStateChanged(auth, async (user) => {
            setCurrentUser(user);  // æ›´æ–° Auth ä½¿ç”¨è€…
            
            if (user) {
                // ç™»å…¥æ™‚ï¼šè¼‰å…¥ Firestore è³‡æ–™
                await fetchUserProfile(user.uid);
            } else {
                // ç™»å‡ºæ™‚ï¼šæ¸…ç©ºè³‡æ–™
                setUserProfile(null);
            }
            
            setLoading(false);  // å®Œæˆåˆå§‹è¼‰å…¥
        });

        // æ¸…ç†å‡½å¼ï¼šå…ƒä»¶å¸è¼‰æ™‚å–æ¶ˆç›£è½
        return unsubscribe;
    }, []);

    // ========== æä¾›çµ¦å­å…ƒä»¶çš„å€¼ ==========
    const value = {
        currentUser,    // Firebase Auth ä½¿ç”¨è€…ç‰©ä»¶
        userProfile,    // Firestore ä½¿ç”¨è€…è³‡æ–™
        signup,         // è¨»å†Šå‡½å¼
        login,          // ç™»å…¥å‡½å¼
        logout,         // ç™»å‡ºå‡½å¼
        loading         // è¼‰å…¥ç‹€æ…‹
    };

    return (
        <AuthContext.Provider value={value}>
            {/* ç­‰è¼‰å…¥å®Œæˆæ‰é¡¯ç¤ºå­å…ƒä»¶ */}
            {!loading && children}
        </AuthContext.Provider>
    );
};
